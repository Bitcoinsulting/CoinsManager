template(name="newsletter")
    section.newsletter#newsletter
        header
            h1 Newsletter
        div.content
          form(action="https://madmimi.com/signups/subscribe/98001",
               method="post",
               target="_blank")
              input.subscribe-form-email(type="text",
                                         name="signup[email]",
                                         placeholder="Enter your email",
                                         class="inpt-flat")
              input.subscribe-form-submit(type="submit",
                                          value="Subscribe Now",
                                          class="btn-flat tossing")
