template(name="comingSoonLayout")
    div.wrapper
        div.logo
        div.slogan The fastest way to evaluate your currencies
        {{> subscribe}}
        {{> news}}
        {{> tour}}
        div.coming_soon Coming Soon!
    div.wrapper.left
        {{> coinsManager}}


template(name="alphaLayout")
    {{yield}}
    {{> coinsManager}}
    // TODO: Add condition if Meteor.user is loaded
    {{#if loggedIn}}
    {{> userAddresses}}
    {{/if}}
    {{#if errors.count}}
    div.errors_list
        h2.title Errors
        {{> meteorErrors}}
    {{/if}}
    {{> pageFooter}}
