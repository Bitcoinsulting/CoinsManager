template(name="addressItem")
    div.address
        span.tip Clickable action icons below
        span.coin_name {{name}}
        div.func_panel
            span.left
                i.fa.fa-copy.copy(data-clipboard-text="{{address}}")
                i.fa.fa-font.show_address(data-address-text="{{address}}")
            span.right
                i.fa.fa-times-circle.remove
        header
            h3.address_title
                span.coin_address
                    {{truncateMiddle address 16}}
        {{#ifNumber getBalance}}
        div.coin_balance
            {{#if code}}
            span.coin_code {{code}}
            {{/if}}
            span.coin_value {{getBalance}}
        {{else}}
        div.coin_balance.unavailable
            | Coin balance: Unavailable
        {{/ifNumber}}
        {{#if getValue}}
        div.fiat_balance
            span.fiat_name {{userFiat}}
            span.fiat_value {{getValue}}
        {{else}}
        div.fiat_balance.unavailable
            | Fiat balance: Unavailable
        {{/if}}

    div.additional_info
        // in sass, if div is empty, write text:
        //     No specifications for this coin. Please request it
        //     <a href="https://trello.com/c/p7U95R2D">here</a>
        div.logo
            // Get logo from public/img/coins_logo
        span.coin_name {{name}}
        {{#if total_coin}}
        span Total Coins: {{total_coin}}
        {{/if}}
        {{#if hash_algo}}
        span Hash algorithm: {{hash_algo}}
        {{/if}}
        {{#if protocol}}
        span protocol: {{protocol}}
        {{/if}}
        {{#if foundation_msg}}
        span Foundation message: {{foundation_msg}}
        {{/if}}
