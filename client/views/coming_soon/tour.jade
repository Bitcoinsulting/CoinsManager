template(name="tour")
    div.tour#about
        section#open
            header
                i(class="fa fa-users")
                h1 Open Source
            article
                | Completely transparent, encouraging contribution
            div(class="subnavigation solo")
                i(class="fa fa-chevron-down" data-link="#free")
        section#free
            header
                i(class="fa fa-dollar")
                h1 Free
            article
                | Works only on donations
            div(class="subnavigation")
                i(class="fa fa-chevron-up" data-link="#open")
                i(class="fa fa-chevron-down" data-link="#easy")
        section#easy
            header
                i(class="fa fa-gavel")
                h1 Easy to use
            article
                | Simply add your public addresses and you're good to go!
            div(class="subnavigation")
                i(class="fa fa-chevron-up" data-link="#free")
                i(class="fa fa-chevron-down" data-link="#fast")
        section#fast
            header
                i(class="fa fa-flash")
                h1 Fast
            article
                | Using cutting-edge technologies to give the best browsing
                | experience
            div(class="subnavigation")
                i(class="fa fa-chevron-up" data-link="#easy")
                i(class="fa fa-chevron-down" data-link="#secure")
        section#secure
            header
                i(class="fa fa-laptop")
                h1 Secure
            article
                | No sensitive data stored
            div(class="subnavigation")
                i(class="fa fa-chevron-up" data-link="#fast")
                i(class="fa fa-chevron-down" data-link="#donate")
        section#donate
            header
                i(class="fa fa-bitcoin")
                h1 Donations
            article
                | 1CoinsMPAy5Mz5SVzeAmU6qNmUThiLXYv1
            div(class="subnavigation solo")
                i(class="fa fa-chevron-up" data-link="#secure")
